            "name": "Alexandre Peshansky",
            "email": "Alex.Peshansky@einstein.yu.edu",
            "institution": "Albert Einstein College of Medicine"
       }
     ],

     "links": {
        "project": [
           {
              "name": "View Scatter Plots",
              "icon": "fas fa-chart-line",
              "url": "scatterplot_plugin.php",
              "show-header-and-footer":"true"
           }
        ]
     },

     "compatibility": {
        "php-version-min": "",
        "php-version-max": "",
        "redcap-version-min": "9.1.1",
        "redcap-version-max": ""
     },

     "project-settings": [
       {  
        "name": "Scatterplot Settings",
        "key": "scatterplot",
        "type": "sub_settings",
        "repeatable": true,
        "sub_settings": [         
        {
            "key": "scatterplot-desc",
            "name": "<b>Scatterplot Settings<b>",
            "type": "descriptive"
        },
        {
            "key": "plot-title",
            "name": "Plot Title",
            "required": true,
            "type": "text"
        },
        {
            "key": "x-title",
            "name": "X-Axis Title",
            "required": true,
            "type": "text"
        },               
        {
            "key": "x-coord",
            "name": "X Coordinate",
            "required": true,
            "type": "field-list",
            "repeatable": false
        },
        {
            "key": "y-title",
            "name": "Y-Axis Title",
            "required": true,
            "type": "text"
        },         
        {
            "key": "y-coord",
            "name": "Y Coordinate",
            "required": true,
            "type": "field-list",
            "repeatable": false
        }                                 
      ]
    }
  ]
